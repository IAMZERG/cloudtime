<h1>Project<h2>
<p><%= @project.description %></p>
<h2>Project Timesheet</h2>
<% @total = 0 %>
<ul><% if not @timeperiods.empty? %>
		<% @timeperiods.each do |t| %>
			<li>In: <%= t.created_at %></li>
			<li>Out: <%= t.updated_at %></li>
			<li>Note: <%= t.note %></li>
			<% @total += (t.updated_at.to_i - t.created_at.to_i) %>
			<br>
		<% end %>
	<% end %>
	
	<div>Total time: <%= @total %></div>
</ul>